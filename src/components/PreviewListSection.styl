.container
  height: calc(100vh - 80px)
  background-color: black
  text-align: center
  padding: 0 20px
  margin: 0 auto;
  ::-webkit-scrollbar
    width: 5px
  ::-webkit-scrollbar-thumb
    background: #be9b42
    border-radius: 1px;
  ::-webkit-scrollbar-track
    background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 40%, rgba(93,93,93,1) 41%, rgba(93,93,93,1) 60%, rgba(0,0,0,0) 61%, rgba(0,0,0,0) 100%);
.mainVideo
  display inline-block
  width: calc(100% - 310px)
  vertical-align: middle;
  margin-right: 10px
  position: relative;
  height: 100%
  overflow: hidden
.mainImagePreviewContainer
  width: 100%
  height: 100%
  background-size: cover;
  background-position: center;
  .closeModal
    position: absolute;
    z-index: 2000
    cursor: pointer;
    right 20px
    width: 30px!important
    top 10px
    cursor: pointer;
  .fb, .twitter
    cursor: pointer;
    position: absolute;
    bottom: 0
    width: 50px
    bottom: 10px
    z-index: 10
  .fb
    right 20px
  .twitter
    right: 80px
.imagePreview
  width: 100%
.caption
  color: white
  text-align: left;
  font-size: 10px
  color: white
  font-family: Montserrat
  text-transform: uppercase;
  margin: 5px 0 10px 0
.listVideos
  display: inline-block;
  vertical-align: middle;
  width: 300px
  height: 100%
  padding-right: 10px
  overflow-y: scroll;
.previewBlock
  cursor: pointer;
  position: relative;
  height: 200px
  img
    position: absolute;
    left: 0
    right: 0
    top: 50%
    margin: 0 auto
    transform: translateY(-50%);
.videoContainer
  position: static;
  height: 100%
.iframeContainer
  height: 100%
  .closeModal
    transition: 0.5s
    opacity: 0
    position: absolute;
    z-index: 2000
    cursor: pointer;
    right 20px
    width: 30px!important
    top 10px
    cursor: pointer;
  .fb, .twitter
    transition: 0.5s
    cursor: pointer;
    opacity: 0
    position: absolute;
    bottom: 0
    width: 50px
    bottom: 50px
    z-index: 10
  .fb
    right 20px
  .twitter
    right: 80px
  &:hover > .closeModal
    opacity: 1
  &:hover > .fb
    opacity: 1
  &:hover > .twitter
    opacity: 1
.imageOverlay
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0
  right: 0
  top: 0
  bottom: 0
  z-index: 1
.captionContainer
  position: absolute;
  z-index: 20
  top: 50%
  transform: translateY(-50%);
  left: 0
  right: 0
  margin: 0 auto
  cursor: pointer;
  .caption
    text-align: center;
    font-size: 20px
    font-family: Montserrat
    font-weight: 200
    text-transform: uppercase;
    margin-bottom: 10px
@media screen and (max-width 768px)
  .container
    padding: 0
  .videoContainer
    position: absolute;
    top: 50%
    height: auto
    transform: translateY(-50%)
  .mainVideo
    width: 100%
    margin-right: 0
    height: 400px
  .listVideos
    width: 100%
    height: auto
    overflow-x: scroll
    white-space:nowrap;
  .previewBlock
    display: inline-block;
    width: 40%
  .iframeContainer
    height: 350px
