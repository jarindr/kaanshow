.select
  border-left none
  border-top none
  border-right none
  display block
  font-size 12px
  color inherit
  padding 8px 5px
  width 100%
  transition 1s
  position relative
  cursor pointer
  display inline-block
  .chevron
    font-weight 200
    display inline-block
    width 15px
  .title
    font-size 14px
    color #7a7e88
    font-weight 600
.optionsContainer
  position absolute
  left 0
  right 0
  background white
  width 100%
  margin-top 6px
  display none
  border 1px solid black
  border-radius 2px
  z-index 2
  max-height 150px
  overflow-y scroll
  &.active
    display block
.option
  color white
  padding 2px 5px
  font-size 12px
  background grey
  &:not(:last-child)
    border-bottom 1px solid black
  &:hover
    background-color rgba(207, 207, 207, 1)
  &.active
    background-color rgba(207, 207, 207, 1)
.container
  position relative
  display inline-block
