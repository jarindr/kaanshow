.container
  vertical-align: top;
  height: 450px
  width: 100%
  max-width: 1100px
  background-color: white
  margin: 0 auto;
.imagePreview
  display: inline-block;
  width: 60%
  vertical-align: top;
  height: 100%
  background-size: cover;
  position: relative
  img
    width: 100%
.contentContainer
  display: inline-block;
  width: 40%
  height: 100%
  padding-right: 20px
  padding-top: 20px
  h1
    color: #be9b42
    margin: 0
    font-family: 'Chonburi', cursive;
  h3
    color: #be9b42
    margin: 0
    font-family: 'Chonburi', cursive;
.content
  overflow-y: auto;
  height: 350px
  padding: 20px 40px;
  margin-top: 30px
  span
    font-size: 10px
    font-family: montserrat
    margin-top: 5px
    color rgb(106, 106, 106)
.social
  margin-left: 40px
  margin-top: 10px
  margin-bottom: 10px
.titleImage
  text-align: center
  position: absolute;
  bottom: 20px
  left: 0
  right: 0
  margin: 0 auto
  z-index: 10
  color: rgb(179, 179, 179)
.socialRadial
  border-radius: 50%
  border: 1px solid grey
  width: 25px
  height: 25px
  text-align: center
  color: rgb(88, 88, 88)
  line-height: 25px
  display: inline-block
  margin-right: 10px
  :global .flaticon-facebook:before
    font-size: 14px
  :global .flaticon-twitter:before
    font-size: 14px
.closeModal
  cursor: pointer;
  width: 25px
  height: 25px
  line-height: 25px
  font-size: 12px
  text-align: center;
  background-color: rgb(43, 43, 43)
  color: rgb(226, 226, 226)
  padding-top: 1px
  float: right
  margin-left: 6px
  border-radius: 50%
.arrowLeft
  width: 30px!important
  position: absolute
  top: 50%
  right: 10px
  transform: translateY(-50%)
  cursor: pointer;
.arrowRight
  width: 30px!important
  cursor: pointer;
  position: absolute
  top: 50%
  left 10px
  transform: translateY(-50%) scaleX(-1)

@media screen and (max-width 768px)
  .container
    width: 100%
    height: auto
  .imagePreview
    width: 100%
    height: 200px
  .contentContainer
    width: 100%
  .content
    height: 300px
