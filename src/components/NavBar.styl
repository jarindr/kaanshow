.container
  width: 100%
  display: flex
  align-items: center;
  font-family: Montserrat;
  background: black;
  font-weight: 300;
  padding: 0 50px
  height: 80px
  position: fixed;
  z-index: 30
  top: 0;
.navItem
  padding: 0 10px;
  font-size: 12px;
  color: #6e6e6e
  cursor: pointer;
.navigationContainer
  align-items: center;
  margin-left: auto;
.navigationLogo
  display: inline-flex;
  img
    height: 60px
.ticket
  background-color: #be9b42
  color: white
.containerMobile
  display: none;
  height: 60px;
  background-color: black
  width: 100%

@media screen and (max-width 500px)
  .container
    padding: 0 20px
  .navigationContainer
    position: fixed;
    left: 0
    right: 0
    top: 0
    bottom: 0
    padding-top: 50%
    background-color: black
    transform: translate3d(-100%,0,0);
  .navigationLogo
    display: inline-flex
  .navItem
    font-size: 40px
    padding: 10px 0
    display: block
    width: 100%

:global
  #hamberger-menu {
    margin-left: auto;
    align-items: center;
    width: 40px;
    height: 20px;
    position: relative;
    transform: rotate(0deg);
    transition: .5s ease-in-out;
    cursor: pointer;
    z-index: 20;
    right: 0;
    display: none;
  }

  #hamberger-menu span {
    display: block;
    position: absolute;
    height: 5px;
    width: 100%;
    background-color: white;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: .25s ease-in-out;
  }

  #hamberger-menu span:nth-child(1) {
    top: 0px;
  }

  #hamberger-menu span:nth-child(2), #hamberger-menu span:nth-child(3) {
    top: 10px;
  }

  #hamberger-menu span:nth-child(4) {
    top: 20px;
  }

  #hamberger-menu.open span:nth-child(1) {
    top: 20px;
    width: 0%;
    left: 50%;
  }

  #hamberger-menu.open span:nth-child(2) {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
  }

  #hamberger-menu.open span:nth-child(3) {
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  #hamberger-menu.open span:nth-child(4) {
    top: 10px;
    width: 0%;
    left: 50%;
  }
  @media screen and (max-width 500px)
    #hamberger-menu
      display block
      position: relative;
