.iframeContainer
  max-width: 1000px;
  height: 500px
  margin: 20px auto 0 auto;
.singleVideoContainer
  position: relative;
  max-width: 1000px;
  width: 100%
  height: 500px
  text-align: center;
  margin: 20px auto 0 auto
  img
    position: absolute;
  .playButton
    z-index: 20
    top: 50%
    transform: translateY(-50%);
    left: 0
    right: 0
    margin: 0 auto
  .overlay
    left: 0
    right: 0
    top: 0
    bottom: 0
    background: black
    opacity: 1
    z-index: 10
    position: absolute;
    opacity: 0.3
  .singleImagePreview
    height: 100%
    left: 0
    right: 0
    margin: 0 auto
