.iframeContainer
  max-width: 1000px;
  height: 500px
  margin: 20px auto 0 auto;
  position: relative;
  .fb, .twitter
    transition: 0.5s
    cursor: pointer;
    opacity: 0
    position: absolute;
    bottom: 0
    width: 50px
    bottom: 50px
    z-index: 10
  .fb
    right 20px
  .twitter
    right: 80px
  &:hover > .fb
    opacity: 1
  &:hover > .twitter
    opacity: 1
.singleVideoContainer
  position: relative;
  max-width: 1000px;
  width: 100%
  height: 500px
  text-align: center;
  margin: 20px auto 0 auto
  text-align: center;
  .fb, .twitter
    cursor: pointer;
    position: absolute;
    bottom: 0
    width: 50px
    bottom: 10px
    z-index: 100
  .fb
    right 20px
  .twitter
    right: 80px
  .captionContainer
    position: absolute;
    z-index: 20
    top: 50%
    transform: translateY(-50%);
    left: 0
    right: 0
    margin: 0 auto
    cursor: pointer;
    .caption
      h1
        font-size: 20px
        font-family: Montserrat
        font-weight: 200
        text-transform: uppercase;
        margin-bottom: 10px
      p
        font-size 16px
        font-family kanit
        max-width 700px
        margin 10px auto
  .overlay
    left: 0
    right: 0
    top: 0
    bottom: 0
    background: black
    opacity: 1
    z-index: 10
    position: absolute;
    opacity: 0.3
  .singleImagePreview
    height: 100%
    left: 0
    right: 0
    margin: 0 auto
