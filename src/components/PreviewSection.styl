.previewBlock
  display: inline-block;
  width: 100%
  max-width: 33.33%
  cursor: pointer;
  overflow: hidden;
  .imageContainer
    width: 100%
    position: relative
    height: 230px
    overflow: hidden;
  .previewImage
    width: 100%
.caption
  font-size: 10px
  color: white
  font-family: Montserrat
  text-transform: uppercase;
  margin: 5px 0 10px 0
.category
  color white
  margin: 0 20px
  cursor: pointer;
  font-size: 13px
  text-transform: uppercase;
  font-family: Montserrat
.categoriesContainer
  margin: 10px 0 30px 0
.playButton
  width: 40px
  left: 0
  right: 0
  margin: 0 auto
  top: 50%
  transform: translateY(-50%)
  position: absolute;
.previewBlocksContainer
  font-size: 0
  max-width: 1050px
  overflow: auto;
  margin: 0 auto
  padding-right: 10px
  text-align: left
.navigation
  cursor: pointer;
  border-radius: 50%
  width: 10px
  height: 10px
  border: 1px solid white
  display: inline-block;
  margin: 3px
.navigationActive
  margin: 3px
  cursor: pointer;
  border-radius: 50%
  width: 10px
  height: 10px
  border: 1px solid white
  display: inline-block;
  background: white
.container
  height: 100%
  text-align: center
  ::-webkit-scrollbar
    width: 5px
  ::-webkit-scrollbar-thumb
    background: #be9b42
    border-radius: 5px
  ::-webkit-scrollbar-track
    background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 40%, rgba(93,93,93,1) 41%, rgba(93,93,93,1) 60%, rgba(0,0,0,0) 61%, rgba(0,0,0,0) 100%);
.navigationContainer
  margin-top: 20px
  text-align: center

@media screen and (max-width 500px)
  .categoriesContainer
    display: none
  .previewBlock
    max-width: 100%
